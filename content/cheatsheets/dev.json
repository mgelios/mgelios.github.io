{
    "name": "Work",
    "cards": [{
        "title": "K8s, K3s",
        "description": "Kubernetes",
        "items": [
            ["Get state of pods", "kubectl get pods"],
            ["Get logs of the pod", "kubectl logs -f {pod}"],
            ["Execute shell in pod", "kubectl exec --stdin --tty {pod} -- /bin/bash"],
            ["Apply pod config", "kubectl apply -f {file}"],
            ["Restart pods", "kubectl rollout restart deployment/pod -n namespace"],
            ["Disable pods through scaling replicas", "kubectl scale deployment -n namespace â€”replicas 0"],
            ["Get namespaces", "kubectl get namespaces"],
            ["Get pods in namespaces", "kubectl get pods -n namespace"]
        ]
    }, {
        "title": "Docker",
        "description": "Docker",
        "items": [
            ["Check containers running", "docker ps"],
            ["Run compose as daemon", "docker-compose up -d"],
            ["Execute shell in docker image", "docker exec -it {container} sh"],
            ["Build docker image", "docker build {user}/{image} ."],
            ["Push docker image to hub", "docker push {user}/{image}"],
            ["Pull fresh images", "docker-compose pull"],
            ["Stats", "docker stats"]
        ]
    }, {
        "title": "Python",
        "description": "Python",
        "items": [
            ["Run static web server (from dir)", "python3 -m http.server {port}"],
            ["Install dependencies from requirements file", "pip install -r {path}"]
        ]
    }, {
        "title": "Linux",
        "description": "Linux",
        "items": [
            ["List of files", "ls -l"],
            ["Change user to root", "sudo su"],
            ["Change or set password for user", "passwd {user}"],
            ["Folder size in linux", "du -sh {folder}"],
            ["View long files", "less {file}"],
            ["Scroll to the end of file in less", "Shift + G"],
            ["Certbot standalone", "sudo certbot certonly --standalone"],
            ["Certbot webroot", "sudo certbot certonly --webroot"]
        ]
    }, {
        "title": "Git",
        "description": "git",
        "items": [
            ["Git set username", "git config --local user.name {username}"],
            ["Git set email", "git config --local user.email {email}"],
            ["Show git config", "git config -l"]
        ]
    }, {
        "title": "Mongo",
        "description": "mongo",
        "items": [
            ["Run mongo cli in container", "mongosh"],
            ["Show dbs", "show dbs"],
            ["Show current db", "db"],
            ["Switch db", "user {db}"],
            ["Drop", "db.dropDatabase()"],
            ["Create collection", "db.createCollection('{collection}')"],
            ["Show collections", "show collections"],
            ["Get all rows", "db.{collection}.find()"],
            ["Get rows formatted", "db.{collection}.find().pretty()"],
            ["Insert Row", "db.{collection}.insert({ filed: 'FieldContent', otherField: 'AnotherField' })"],
            ["Insert Multiple Rows", "db.{collection}.insertMany([{field:'Content'},{field:'Content2'}])"],
            ["Find rows", "db.{collection}.find({filed:'content'})"]
        ]
    }]
}
